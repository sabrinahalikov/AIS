{$R *.dfm}

procedure TForm8.Label1Click(Sender: TObject);
begin
PageControl1.ActivePageIndex := 0;
Label1.Font.Style := Label1.Font.Style + [fsUnderline];
Label3.Font.Style := Label3.Font.Style - [fsUnderline];
Label4.Font.Style := Label4.Font.Style - [fsUnderline];
end;

procedure TForm8.Label3Click(Sender: TObject);
begin
PageControl1.ActivePageIndex := 1;
Label1.Font.Style := Label1.Font.Style - [fsUnderline];
Label3.Font.Style := Label3.Font.Style + [fsUnderline];
Label4.Font.Style := Label4.Font.Style - [fsUnderline];
end;

procedure TForm8.Label4Click(Sender: TObject);
begin
PageControl1.ActivePageIndex := 2;
Label1.Font.Style := Label1.Font.Style - [fsUnderline];
Label3.Font.Style := Label3.Font.Style - [fsUnderline];
Label4.Font.Style := Label4.Font.Style + [fsUnderline];
end;


procedure TForm8.Button2Click(Sender: TObject);
begin
ADOQuery1.Insert;
ADOQuery1.FieldByName('Имя').AsString := '';
ADOQuery1.FieldByName('Фамилия').AsString := '';
ADOQuery1.FieldByName('Телефон').AsInteger := 8;
ADOQuery1.FieldByName('Снять/сдать').AsString := '';
end;


procedure TForm8.Button3Click(Sender: TObject);
begin
if ADOQuery1.RecordCount > 0 then
ADOQuery1.Delete;
end;


procedure TForm8.Button1Click(Sender: TObject);
begin
try
ADOQuery1.Active:=True;
ADOQuery1.Post;
except
on e:Exception do
end;
end;

procedure TForm8.Button4Click(Sender: TObject);
begin
try
ADOQuery2.Active:=True;
ADOQuery2.Post;
except
on e:Exception do
end;
end;

procedure TForm8.Button5Click(Sender: TObject);
begin
ADOQuery2.Insert;
ADOQuery2.FieldByName('Адрес').AsString := '';
ADOQuery2.FieldByName('Комнаты').AsString := '';
ADOQuery2.FieldByName('Этажность').AsString := '';
ADOQuery2.FieldByName('Комплатеж').AsString := '';
ADOQuery2.FieldByName('Стоимость').AsString := '';
ADOQuery2.FieldByName('Имя').AsString := '';
ADOQuery2.FieldByName('Фамилия').AsString := '';
ADOQuery2.FieldByName('Телефон').AsString := '';
end;

procedure TForm8.Button6Click(Sender: TObject);
begin
if ADOQuery2.RecordCount > 0 then
ADOQuery2.Delete;
end;

procedure TForm8.Button7Click(Sender: TObject);
begin
if ADOQuery3.RecordCount > 0 then
    ADOQuery3.Delete;
end;

procedure TForm8.Button8Click(Sender: TObject);
begin
ADOQuery3.Insert;
ADOQuery3.FieldByName('ФИО').AsString := '';
ADOQuery3.FieldByName('Номер телефона').AsString := '';
end;

procedure TForm8.Button9Click(Sender: TObject);
begin
try
ADOQuery3.Active:=True;
ADOQuery3.Post;
except
on e:Exception do
end;
end;

procedure TForm8.Image1Click(Sender: TObject);
begin
  if Panel1.Left < -1 then
    Panel1.Left := -1
  else if Panel1.Left >= -1 then
    Panel1.Left := -240;
end;

procedure TForm8.Image4Click(Sender: TObject);
begin
PageControl2.ActivePageIndex := 1;
end;

procedure TForm8.Image2Click(Sender: TObject);
begin
PageControl2.ActivePageIndex := 0;
end;

procedure TForm8.Image6Click(Sender: TObject);
begin
PageControl2.ActivePageIndex := 1;
end;

procedure TForm8.Image5Click(Sender: TObject);
begin
PageControl2.ActivePageIndex := 1;
end;






procedure TForm8.DBGrid3DrawColumnCell(Sender: TObject; const Rect: TRect;
  DataCol: Integer; Column: TColumn; State: TGridDrawState);
begin
  DBGrid3.Canvas.Brush.Color := clWhite;
  DBGrid3.DefaultDrawColumnCell(Rect, DataCol, Column, State);
end;


procedure TForm8.DBGrid1DrawColumnCell(Sender: TObject; const Rect: TRect;
  DataCol: Integer; Column: TColumn; State: TGridDrawState);
begin
  DBGrid1.Canvas.Brush.Color := clWhite;
  DBGrid1.DefaultDrawColumnCell(Rect, DataCol, Column, State);
end;

procedure TForm8.DBGrid2DrawColumnCell(Sender: TObject; const Rect: TRect;
  DataCol: Integer; Column: TColumn; State: TGridDrawState);
begin
  DBGrid2.Canvas.Brush.Color := clWhite;
  DBGrid2.DefaultDrawColumnCell(Rect, DataCol, Column, State);
end;

end.
